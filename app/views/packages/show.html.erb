<div class="form-container">
  <div class="row">
    <div class="col-8 col-left-services">
      <div class="content-left-services">
        <div class="show-packages-title">
          <h2><%= @package.title %></h2>
          <p><%= @package.description %></p>
        </div>

        <div class="card-show-packages-container">
          <div class="card-show-packages">
            <div class="show-packages-card-top">
              <% i = 1 %>
              <% @package.services.each do |service| %>
                <div class="show-packages-card-item">
                  <div class="show-packages-card-text">
                    <p class="show-packages-card-text-title">Service <%= i %></p>
                    <p class="show-packages-card-text-subtitle"><%= service.title %></p>
                    <% i += 1 %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="show-packages-card-bottom">
              <div class="show-packages-card-item">
                <div class="show-packages-card-text">
                  <p class="show-packages-card-text-title">Prix TTC</p>
                  <p class="show-packages-card-text-subtitle">pour l'ensemble des prestations</p>
                </div>
                <div class="show-packages-card-price">
                  <p><%= @package.price %>€</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="booking-button">
          <button type="button" class="button" data-toggle="modal" data-target="#exampleModal">
          Réserver
          </button>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Quand souhaitez-vous naviguer ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
                <%= simple_form_for([@package, @booking]) do |f| %>
                  <%= f.input :date, :label => "Date :", as: :string, required: true, input_html: {class: "datetimepicker"} %>
                  <%= f.button :submit, "Payer", class: "call-button", id: 'toto' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="col-4 col-right-show" style="background-image: url(<%= asset_path @package.photo %>)">
    </div>
  </div>
</div>
