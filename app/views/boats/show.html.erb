<div class="show-boat-container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-left-show-boat">
      <div class="content-left-show-boat">
        <h1>Bienvenue à bord !</h1>
        <div class="confirm-booking">
          <div class="confirm-card">
            <div class="confirm-title">
              <p>Votre bateau</p>
            </div>
            <div class="confirm-photo">
              <%= cl_image_tag @boat.photo, class: "avatar-big" %>
              <p><%= @boat.name %></p>
            </div>
            <div class="confirm-boat-infos">
              <p><strong>Port d'attache :</strong> <%= @boat.address.split(',').first %></p>
              <p><strong>Type de bateau :</strong> <%= @boat.category.name %></p>
              <p><strong>Taille :</strong> <%= @boat.dimension.meter %></p>
            </div>
          </div>
          <div class="confirm-card">
            <div class="confirm-title">
              <p>Votre concierge</p>
            </div>
            <div class="confirm-photo">
              <%= cl_image_tag @manager.photo, class: "avatar-big" %>
              <p><%= @manager.first_name %>, <%= @manager.address %></p>
            </div>
            <div class="confirm-manager-description">
              <p class="text-justify"><%= @manager.description %></p>
            </div>
          </div>
        </div>
          <div class="valid-buttons">
            <%= link_to "M'abonner", package_bookings_path(@abonnement, boat_id: @boat), method: :post, class: "button" %>
            <br>
            <button type="button" class="call-button-2" data-toggle="modal" data-target="#exampleModal">
              Etre rappelé
            </button>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Quand souhaitez-vous être rappelé ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
                    <%= simple_form_for :search, method: "get" do |f| %>
                      <%= f.input :starts_at, :label => "Date :", as: :string, required: false, input_html: {class: "datepicker"} %>
                      <%= f.input :ends_at, :label => "Heure :", as: :string, required: false, input_html: {class: "timepicker"} %>
                      <%= f.button :submit, "Valider", class: "call-button" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <br><br>
          </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-right-show-boat">
      <div class="show-boat-text-image">
      </div>
    </div>
  </div>
</div>
