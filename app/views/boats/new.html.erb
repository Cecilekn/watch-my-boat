<div class="form-container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-left-boat">
      <div class="content-left">
        <h2>Votre bateau</h2>
          <div class="form-inputs">
            <%= simple_form_for(@boat) do |f| %>
            <%= f.input :name, label: "Nom de votre bateau" %>
            <%= f.input :address, label: "Port d'attache" %>
            <%= f.association :category, label: "Type de bateau", as: :radio_buttons, collection: Category.all, wrapper: :vertical_collection_inline %>
            <%= f.association :dimension, label: "Taille", as: :radio_buttons, collection: Dimension.all, wrapper: :vertical_collection_inline %>
            <%= f.input :photo, label: "Photo de votre bateau" %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="form-actions">
            <p>Etape 2 sur 3</p>
            <%= f.button :submit, "Suivant" %>
          </div>
            <% end %>
        </div>
      </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-right-boat">
      <div class="form-text-image">
      </div>
    </div>
  </div>
</div>








