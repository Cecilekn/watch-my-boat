<div class="form-container">
  <div class="row">
    <div class="col-8 col-left">
      <div class="content-left">
        <h2>Les informations sur votre bateau</h2>
          <div class="form-inputs">
            <%= simple_form_for(@boat) do |f| %>
            <%= f.input :name, label: "Nom de votre bateau" %>
            <%= f.input :address, label: "Port d'attache" %>
            <%= f.input :category, label: "Type de bateau", as: :radio_buttons, collection: Boat::CATEGORIES, wrapper: :vertical_collection_inline %>
            <%= f.input :size, label: "Taille", as: :radio_buttons, collection: Boat::SIZE, wrapper: :vertical_collection_inline %>
            <%= f.input :photo, label: "Photo de votre bateau" %>
            <%= f.input :photo_cache, as: :hidden %>
            <p>Etape 2 sur 3</p>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Suivant" %>
          </div>
        <% end %>
        </div>
      </div>
    <div class="col-4 col-right-boat">
      <div class="text-image">
        <p>Naviguez en toute libert√©</p>
      </div>
    </div>
  </div>
</div>






