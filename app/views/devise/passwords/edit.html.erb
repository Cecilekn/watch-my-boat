<div class="form-container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-left-change-password">
      <div class="content-left">
        <h2>Changer votre mot de passe</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-inputs">
            <%= f.input :password,
                        label: "Nouveau mot de passe",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: "Confirmer votre nouveau mot de passe", required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Changer mon mot de passe" %>
          </div>
            <% end %>
      <%= render "devise/shared/links" %>
        </div>
      </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-right-change-password">
      <div class="form-text-image">
      </div>
    </div>
  </div>
</div>
